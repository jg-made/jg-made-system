shell "/usr/bin/zsh"
hardstatus alwayslastline
hardstatus string '%{= kG}[%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{B} %d/%m %{W}%c %{g}]'
escape ^@@
defscrollback 100000
altscreen on

rendition so =06
rendition so km
caption string "%{03} "

chdir $PROCUREMENT_PROJECT_DIR
screen
split
focus
chdir $RIP_PROJECT_DIR
screen
focus
